.PHONY: configure-qc

configure-qc: 
	@r=`${PWD_COMMAND}`; export r; \
	s=`cd $(srcdir); ${PWD_COMMAND}`; export s; \
	${TARGET_DEFS}; \
	cd qc || exit 1; \
	$(SHELL) @abs_srcdir@/qc/configure --srcdir=../$(srcdir)/qc $(TARGET_CONFIGURE_OPTS) --enable-float=@float_support@ --enable-int128=@int128_support@




