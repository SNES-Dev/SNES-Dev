set(CMAKE_C_COMPILER ${SNESDEV_LOCAL_C_COMPILER})
set(CMAKE_C_COMPILER_TARGET @SNESDEV_TARGET_NAME@)

if(SNESDEV_LOCAL_CXX_COMPILER)
